<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCollectionMobileApp.SettingsPage"
             BackgroundColor="#f8fbfa"
             Title="Настройки">

    <Grid RowDefinitions="Auto,*,Auto"
          RowSpacing="0">

        <!-- Шапка с кнопкой назад -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              BackgroundColor="#f8fbfa" 
              Padding="16,12,16,8">

            <ImageButton x:Name="BackButton"
                         Source="back_icon.png"
                         WidthRequest="24"
                         HeightRequest="24"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         Clicked="OnBackButtonClicked"/>

            <Label Grid.Column="1"
                   Text="Настройки"
                   TextColor="#0e1a13"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Контент настроек -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="0">

                <!-- Внешний вид -->
                <Label Text="Внешний вид"
                       TextColor="#0e1a13"
                       FontSize="22"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"/>

                <!-- Тема -->
                <Border x:Name="ThemeBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Тема"
                                   TextColor="#0e1a13"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="Системная"
                                   TextColor="#51946c"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                        <Label Text="Светлая"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnThemeClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Иконка приложения -->
                <Border x:Name="AppIconBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Иконка приложения"
                                   TextColor="#0e1a13"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="По умолчанию"
                                   TextColor="#51946c"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                        <Label Text="Классическая"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAppIconClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Аккаунт -->
                <Label Text="Аккаунт"
                       TextColor="#0e1a13"
                       FontSize="22"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"/>

                <!-- Профиль -->
                <Border x:Name="ProfileBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Label Text="Профиль"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <!-- Черная стрелка через FontImageSource -->
                        <Image Source="{FontImageSource FontFamily=MaterialIcons, Glyph=chevron_right, Color=#0e1a13, Size=24}"
                               WidthRequest="24"
                               HeightRequest="24"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnProfileClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Уведомления -->
                <Border x:Name="NotificationsBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Label Text="Уведомления"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Image Source="{FontImageSource FontFamily=MaterialIcons, Glyph=chevron_right, Color=#0e1a13, Size=24}"
                               WidthRequest="24"
                               HeightRequest="24"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNotificationsClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Безопасность -->
                <Border x:Name="SecurityBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Label Text="Безопасность"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Image Source="{FontImageSource FontFamily=MaterialIcons, Glyph=chevron_right, Color=#0e1a13, Size=24}"
                               WidthRequest="24"
                               HeightRequest="24"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSecurityClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Приватность -->
                <Border x:Name="PrivacyBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Label Text="Приватность"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Image Source="{FontImageSource FontFamily=MaterialIcons, Glyph=chevron_right, Color=#0e1a13, Size=24}"
                               WidthRequest="24"
                               HeightRequest="24"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPrivacyClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Поддержка -->
                <Label Text="Поддержка"
                       TextColor="#0e1a13"
                       FontSize="22"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"/>

                <!-- Центр помощи -->
                <Border x:Name="HelpCenterBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Label Text="Центр помощи"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Image Source="{FontImageSource FontFamily=MaterialIcons, Glyph=chevron_right, Color=#0e1a13, Size=24}"
                               WidthRequest="24"
                               HeightRequest="24"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHelpCenterClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Связаться с нами -->
                <Border x:Name="ContactUsBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Label Text="Связаться с нами"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Image Source="{FontImageSource FontFamily=MaterialIcons, Glyph=chevron_right, Color=#0e1a13, Size=24}"
                               WidthRequest="24"
                               HeightRequest="24"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnContactUsClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Условия использования -->
                <Border x:Name="TermsBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,0">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Label Text="Условия использования"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Image Source="{FontImageSource FontFamily=MaterialIcons, Glyph=chevron_right, Color=#0e1a13, Size=24}"
                               WidthRequest="24"
                               HeightRequest="24"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTermsClicked" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Политика конфиденциальности -->
                <Border x:Name="PrivacyPolicyBorder"
                        BackgroundColor="White"
                       Stroke="#e8f2ec"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 0"
                       Padding="16,12"
                       Margin="16,0,16,8">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="8">
                        <Label Text="Политика конфиденциальности"
                               TextColor="#0e1a13"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Image Source="{FontImageSource FontFamily=MaterialIcons, Glyph=chevron_right, Color=#0e1a13, Size=24}"
                               WidthRequest="24"
                               HeightRequest="24"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPrivacyPolicyClicked" />
                    </Border.GestureRecognizers>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Нижняя навигация -->
        <Border Grid.Row="2"
                BackgroundColor="#f8fbfa"
                Padding="0,8,0,0"
                Stroke="#e8f2ec"
                StrokeThickness="1"
                StrokeShape="Rectangle">

            <Grid ColumnDefinitions="*,*,*,*,*"
                  ColumnSpacing="8"
                  Padding="16,8,16,8">

                <!-- Главная -->
                <VerticalStackLayout Spacing="4" Grid.Column="0">
                    <Label Text="🏠"
                           FontSize="24"
                           TextColor="#51946c"
                           HorizontalOptions="Center"/>
                    <Label Text="Главная"
                           TextColor="#51946c"
                           FontSize="12"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHomeNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- Добавить -->
                <VerticalStackLayout Spacing="4" Grid.Column="1">
                    <Label Text="➕"
                           FontSize="24"
                           TextColor="#51946c"
                           HorizontalOptions="Center"/>
                    <Label Text="Добавить"
                           TextColor="#51946c"
                           FontSize="12"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddItemNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- Фильтры -->
                <VerticalStackLayout Spacing="4" Grid.Column="2">
                    <Label Text="🔧"
                           FontSize="24"
                           TextColor="#51946c"
                           HorizontalOptions="Center"/>
                    <Label Text="Фильтры"
                           TextColor="#51946c"
                           FontSize="12"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFiltersNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- Статистика -->
                <VerticalStackLayout Spacing="4" Grid.Column="3">
                    <Label Text="📊"
                           FontSize="24"
                           TextColor="#51946c"
                           HorizontalOptions="Center"/>
                    <Label Text="Статистика"
                           TextColor="#51946c"
                           FontSize="12"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnStatsNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- Настройки -->
                <VerticalStackLayout Spacing="4" Grid.Column="4">
                    <Label Text="⚙️"
                           FontSize="24"
                           TextColor="#0e1a13"
                           HorizontalOptions="Center"/>
                    <Label Text="Настройки"
                           TextColor="#0e1a13"
                           FontSize="12"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSettingsNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>
            </Grid>
        </Border>

    </Grid>
</ContentPage>