<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCollectionMobileApp.AddItemPage"
             BackgroundColor="#f8fbfa"
             Title="Добавление - Основное">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="0" Margin="0">

        <!-- Заголовок и кнопка возврата -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              BackgroundColor="#f8fbfa" 
              Padding="16,8,16,8">
            <ImageButton x:Name="BackButton"
                         Source="back_icon.png"
                         WidthRequest="24"
                         HeightRequest="24"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         Clicked="OnBackButtonClicked" />
            <Label Grid.Column="1"
                   Text="Добавление - Основное"
                   TextColor="#0e1a13"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Индикаторы прогресса (шаг 1 активен) -->
        <HorizontalStackLayout Grid.Row="1"
                               Spacing="12"
                               HorizontalOptions="Center"
                               Padding="0,20,0,20">
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" BackgroundColor="#38e07b" />
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" BackgroundColor="#d1e6d9" />
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" BackgroundColor="#d1e6d9" />
        </HorizontalStackLayout>

        <!-- Поля ввода -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="12" Padding="16">
                <!-- Название элемента (обязательное) -->
                <Entry x:Name="NameEntry"
                       Placeholder="Название элемента *"
                       PlaceholderColor="#51946c"
                       TextColor="#0e1a13"
                       BackgroundColor="#e8f2ec"
                       HeightRequest="56"
                       FontSize="16"
                       Margin="0,4"
                       ClearButtonVisibility="WhileEditing"
                       Text="{Binding Name}" />

                <!-- Категория (Picker) -->
                <Picker x:Name="CategoryPicker"
                        Title="Выберите категорию *"
                        TextColor="#0e1a13"
                        BackgroundColor="#e8f2ec"
                        HeightRequest="56"
                        FontSize="16"
                        Margin="0,4"
                        ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding Category}"/>

                <!-- Добавление изображения -->
                <Button x:Name="AddImageButton"
                        Text="Добавить фото"
                        TextColor="#0e1a13"
                        BackgroundColor="#38e07b"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="48"
                        Margin="0,4"
                        CornerRadius="8"
                        Clicked="OnAddImageClicked" />

                <!-- Контейнер для изображения - ИСПРАВЛЕНО (Frame заменен на Border) -->
                <Border x:Name="ImageContainer"
                       HeightRequest="200"
                       WidthRequest="200"
                       HorizontalOptions="Center"
                       BackgroundColor="#e8f2ec"
                       Padding="0"
                       StrokeShape="RoundRectangle 12"
                       IsVisible="False">

                    <Image x:Name="SelectedImage"
                           Aspect="AspectFill"
                           HeightRequest="200"
                           WidthRequest="200">
                        <Image.Clip>
                            <RoundRectangleGeometry CornerRadius="12"
                                                   Rect="0,0,200,200" />
                        </Image.Clip>
                    </Image>

                    <!-- Кнопка изменения режима отображения -->
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnChangeImageAspectClicked" />
                    </Border.GestureRecognizers>

                    <!-- Индикатор режима отображения -->
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" 
                                   Binding="{Binding Source={x:Reference SelectedImage}, Path=Aspect}" 
                                   Value="AspectFill">
                            <Setter Property="BackgroundColor" Value="#e8f2ec" />
                        </DataTrigger>
                        <DataTrigger TargetType="Border" 
                                   Binding="{Binding Source={x:Reference SelectedImage}, Path=Aspect}" 
                                   Value="AspectFit">
                            <Setter Property="BackgroundColor" Value="#d1e6d9" />
                        </DataTrigger>
                    </Border.Triggers>
                </Border>

                <!-- Подпись под изображением -->
                <Label x:Name="ImageHintLabel"
                       Text="Нажмите на изображение для смены режима отображения"
                       TextColor="#51946c"
                       FontSize="12"
                       HorizontalOptions="Center"
                       IsVisible="False"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Кнопка Далее -->
        <Button Grid.Row="3"
                Text="Далее"
                TextColor="#0e1a13"
                BackgroundColor="#38e07b"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="48"
                Margin="16,12"
                CornerRadius="8"
                Clicked="OnNextButtonClicked" />
    </Grid>
</ContentPage>