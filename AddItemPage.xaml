<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCollectionMobileApp.AddItemPage"
             BackgroundColor="#f8fbfa"
             Title="Add Item - Basic">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="0" Margin="0">

        <!-- Заголовок и кнопка возврата -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              BackgroundColor="#f8fbfa" 
              Padding="16,8,16,8">
            <ImageButton x:Name="BackButton"
                         Source="back_icon.png"
                         WidthRequest="24"
                         HeightRequest="24"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         Clicked="OnBackButtonClicked" />
            <Label Grid.Column="1"
                   Text="Add Item - Basic"
                   TextColor="#0e1a13"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Индикаторы прогресса (шаг 1 активен) -->
        <HorizontalStackLayout Grid.Row="1"
                               Spacing="12"
                               HorizontalOptions="Center"
                               Padding="0,20,0,20">
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" BackgroundColor="#38e07b" />
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" BackgroundColor="#d1e6d9" />
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" BackgroundColor="#d1e6d9" />
        </HorizontalStackLayout>

        <!-- Поля ввода -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="12" Padding="16">
                <!-- Название элемента (обязательное) -->
                <Entry x:Name="NameEntry"
                       Placeholder="Item Name *"
                       PlaceholderColor="#51946c"
                       TextColor="#0e1a13"
                       BackgroundColor="#e8f2ec"
                       HeightRequest="56"
                       FontSize="16"
                       Margin="0,4"
                       ClearButtonVisibility="WhileEditing"
                       Text="{Binding Name}" />

                <!-- Категория (Picker) -->
                <Picker x:Name="CategoryPicker"
                        Title="Select Category *"
                        TextColor="#0e1a13"
                        BackgroundColor="#e8f2ec"
                        HeightRequest="56"
                        FontSize="16"
                        Margin="0,4"
                        SelectedItem="{Binding Category}">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Вино</x:String>
                            <x:String>Книги</x:String>
                            <x:String>Комиксы</x:String>
                            <x:String>Фигурки</x:String>
                            <x:String>Растения</x:String>
                            <x:String>Другое</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <!-- Добавление изображения -->
                <Button x:Name="AddImageButton"
                        Text="Добавить фото"
                        TextColor="#0e1a13"
                        BackgroundColor="#38e07b"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="48"
                        Margin="0,4"
                        CornerRadius="8"
                        Clicked="OnAddImageClicked" />
                <Image x:Name="SelectedImage"
                       HeightRequest="200"
                       Aspect="AspectFit"
                       IsVisible="False"
                       Source="{Binding ImagePath}" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Кнопка Next -->
        <Button Grid.Row="3"
                Text="Next"
                TextColor="#0e1a13"
                BackgroundColor="#38e07b"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="48"
                Margin="16,12"
                CornerRadius="8"
                Clicked="OnNextButtonClicked" />
    </Grid>
</ContentPage>