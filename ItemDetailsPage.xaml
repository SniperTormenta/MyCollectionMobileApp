<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCollectionMobileApp.ItemDetailsPage"
             BackgroundColor="#f8fbfa"
             Title="Детали элемента">

    <Grid RowDefinitions="Auto,*,Auto,Auto"
          RowSpacing="0">

        <!-- Шапка с кнопкой назад -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              BackgroundColor="#f8fbfa" 
              Padding="16,12,16,8">

            <ImageButton x:Name="BackButton"
                         Source="back_icon.png"
                         WidthRequest="24"
                         HeightRequest="24"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         Clicked="OnBackButtonClicked"/>

            <Label Grid.Column="1"
                   Text="Детали элемента"
                   TextColor="#0e1a13"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Контент -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="0">

                <!-- Изображение элемента -->
                <Image x:Name="ItemImage"
                       Source="{Binding ImagePath}"
                       Aspect="AspectFill"
                       HeightRequest="300"
                       BackgroundColor="#e8f2ec">
                    <Image.Clip>
                        <RoundRectangleGeometry CornerRadius="0"
                                               Rect="0,0,300,300" />
                    </Image.Clip>
                </Image>

                <!-- Название -->
                <Label Text="{Binding Name}"
                       TextColor="#0e1a13"
                       FontSize="22"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"
                       LineBreakMode="WordWrap"/>

                <!-- Описание -->
                <Label Text="{Binding Description}"
                       TextColor="#0e1a13"
                       FontSize="16"
                       Margin="16,0,16,16"
                       LineBreakMode="WordWrap"/>

                <!-- Стандартные поля -->
                <Grid ColumnDefinitions="Auto,*"
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                      ColumnSpacing="24"
                      RowSpacing="0"
                      Margin="16,0,16,0">

                    <!-- Категория -->
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Text="Категория:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Text="{Binding Category}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                    <!-- Состояние -->
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Text="Состояние:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="{Binding Condition}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                    <!-- Место хранения -->
                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Text="Место хранения:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="2"
                           Grid.Column="1"
                           Text="{Binding StorageLocation}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                    <!-- Дата приобретения -->
                    <Label Grid.Row="3"
                           Grid.Column="0"
                           Text="Дата приобретения:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="3"
                           Grid.Column="1"
                           Text="{Binding AcquisitionDate, StringFormat='{0:dd.MM.yyyy}'}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                    <!-- Стоимость -->
                    <Label Grid.Row="4"
                           Grid.Column="0"
                           Text="Стоимость:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="4"
                           Grid.Column="1"
                           Text="{Binding Cost, StringFormat='{0:C} {1}'}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                </Grid>

                <!-- Кастомные поля -->
                <BoxView HeightRequest="1"
                         BackgroundColor="#d1e6d9"
                         Margin="16,20,16,0"/>

                <Label Text="Дополнительная информация"
                       TextColor="#51946c"
                       FontSize="16"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"/>

                <VerticalStackLayout x:Name="CustomFieldsContainer"
                                     Spacing="0"
                                     Margin="16,0,16,16">
                    <!-- Кастомные поля будут добавляться динамически -->
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Кнопки действий -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              ColumnSpacing="12"
              Margin="16,8,16,16">

            <Button x:Name="EditButton"
                    Text="Редактировать"
                    BackgroundColor="#38e07b"
                    TextColor="#0e1a13"
                    CornerRadius="8"
                    Clicked="OnEditButtonClicked"/>

            <Button x:Name="DeleteButton"
                    Grid.Column="1"
                    Text="Удалить"
                    BackgroundColor="#ff6b6b"
                    TextColor="White"
                    CornerRadius="8"
                    Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <!-- Нижняя навигация -->
        <ContentView Grid.Row="3"
                     BackgroundColor="#f8fbfa"
                     Padding="0,8,0,0">
            <VerticalStackLayout Spacing="0">
                <BoxView HeightRequest="1"
                         BackgroundColor="#e8f2ec"/>

                <Grid ColumnDefinitions="*,*,*,*,*"
                      ColumnSpacing="8"
                      Padding="16,8,16,8">
                    <!-- Главная -->
                    <VerticalStackLayout Spacing="4"
                                         Grid.Column="0">
                        <Label Text="🏠"
                               FontSize="24"
                               TextColor="#0e1a13"
                               HorizontalOptions="Center"/>
                        <Label Text="Главная"
                               TextColor="#0e1a13"
                               FontSize="12"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Добавить -->
                    <VerticalStackLayout Spacing="4"
                                         Grid.Column="1">
                        <Label Text="➕"
                               FontSize="24"
                               TextColor="#51946c"
                               HorizontalOptions="Center"/>
                        <Label Text="Добавить"
                               TextColor="#51946c"
                               FontSize="12"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Фильтры -->
                    <VerticalStackLayout Spacing="4"
                                         Grid.Column="2">
                        <Label Text="🔧"
                               FontSize="24"
                               TextColor="#51946c"
                               HorizontalOptions="Center"/>
                        <Label Text="Фильтры"
                               TextColor="#51946c"
                               FontSize="12"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Статистика -->
                    <VerticalStackLayout Spacing="4"
                                         Grid.Column="3">
                        <Label Text="📊"
                               FontSize="24"
                               TextColor="#51946c"
                               HorizontalOptions="Center"/>
                        <Label Text="Статистика"
                               TextColor="#51946c"
                               FontSize="12"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/> 
                    </VerticalStackLayout>

                    <!-- Настройки -->
                    <VerticalStackLayout Spacing="4"
                                         Grid.Column="4">
                        <Label Text="⚙️"
                               FontSize="24"
                               TextColor="#51946c"
                               HorizontalOptions="Center"/>
                        <Label Text="Настройки"
                               TextColor="#51946c"
                               FontSize="12"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </ContentView>

    </Grid>
</ContentPage>