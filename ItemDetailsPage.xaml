<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCollectionMobileApp.ItemDetailsPage"
             BackgroundColor="#f8fbfa"
             Title="Информация о предмете">

    <Grid RowDefinitions="*,Auto"
          RowSpacing="0">

        <!-- Контент -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="0">

                <!-- Изображение элемента -->
                <Grid HeightRequest="300"
                      BackgroundColor="#e8f2ec"
                      Margin="16,16,16,0">
                    <Image x:Name="ItemImage"
                           Source="{Binding ImagePath}"
                           Aspect="AspectFill">
                        <Image.Clip>
                            <RoundRectangleGeometry CornerRadius="16"
                                                   Rect="0,0,300,300" />
                        </Image.Clip>
                    </Image>
                </Grid>

                <!-- Название -->
                <Label Text="{Binding Name}"
                       TextColor="#0e1a13"
                       FontSize="22"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>

                <!-- Описание -->
                <Label Text="{Binding Description}"
                       TextColor="#0e1a13"
                       FontSize="16"
                       Margin="16,0,16,16"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>

                <!-- Стандартные поля -->
                <Grid ColumnDefinitions="Auto,*"
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                      ColumnSpacing="24"
                      RowSpacing="0"
                      Margin="16,0,16,0">

                    <!-- Категория -->
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Text="Категория:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Text="{Binding Category}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                    <!-- Состояние -->
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Text="Состояние:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="{Binding Condition}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                    <!-- Место хранения -->
                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Text="Место хранения:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="2"
                           Grid.Column="1"
                           Text="{Binding StorageLocation}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                    <!-- Дата приобретения -->
                    <Label Grid.Row="3"
                           Grid.Column="0"
                           Text="Дата приобретения:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="3"
                           Grid.Column="1"
                           Text="{Binding AcquisitionDate, StringFormat='{0:dd.MM.yyyy}'}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                    <!-- Стоимость -->
                    <Label Grid.Row="4"
                           Grid.Column="0"
                           Text="Стоимость:"
                           TextColor="#51946c"
                           FontSize="14"
                           Margin="0,16,0,16"/>
                    <Label Grid.Row="4"
                           Grid.Column="1"
                           Text="{Binding CostFormatted}"
                           TextColor="#0e1a13"
                           FontSize="14"
                           Margin="0,16,0,16"
                           HorizontalOptions="End"/>

                </Grid>

                <!-- Кастомные поля -->
                <BoxView HeightRequest="1"
                         BackgroundColor="#d1e6d9"
                         Margin="16,20,16,0"/>

                <Label Text="Дополнительная информация"
                       TextColor="#51946c"
                       FontSize="16"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"
                       HorizontalTextAlignment="Center"/>

                <VerticalStackLayout x:Name="CustomFieldsContainer"
                                     Spacing="0"
                                     Margin="16,0,16,16">
                    <!-- Кастомные поля будут добавляться динамически -->
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Кнопки действий -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*"
              ColumnSpacing="12"
              Margin="16,8,16,16"
              Padding="0,0,0,8">

            <Button x:Name="EditButton"
                    Text="Редактировать"
                    BackgroundColor="#38e07b"
                    TextColor="#0e1a13"
                    CornerRadius="8"
                    Clicked="OnEditButtonClicked"/>

            <Button x:Name="DeleteButton"
                    Grid.Column="1"
                    Text="Удалить"
                    BackgroundColor="#ff6b6b"
                    TextColor="White"
                    CornerRadius="8"
                    Clicked="OnDeleteButtonClicked"/>
        </Grid>

    </Grid>
</ContentPage>