<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCollectionMobileApp.StatisticsPage"
             BackgroundColor="#f8fbfa"
             Title="Статистика">

    <Grid RowDefinitions="Auto,*,Auto"
          RowSpacing="0">

        <!-- Шапка с кнопкой назад -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              BackgroundColor="#f8fbfa" 
              Padding="16,12,16,8">

            <ImageButton x:Name="BackButton"
                         Source="back_icon.png"
                         WidthRequest="24"
                         HeightRequest="24"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         Clicked="OnBackButtonClicked"/>

            <Label Grid.Column="1"
                   Text="Статистика"
                   TextColor="#0e1a13"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Контент статистики -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="0">

                <!-- Основные метрики -->
                <Label Text="Обзор коллекции"
                       TextColor="#0e1a13"
                       FontSize="22"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"/>

                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="12"
                      RowDefinitions="Auto,Auto"
                      RowSpacing="12"
                      Margin="16,8,16,16">

                    <!-- Общее количество -->
                    <Border Grid.Row="0" Grid.Column="0"
                           BackgroundColor="White"
                           Stroke="#d1e6d9"
                           StrokeThickness="1"
                           StrokeShape="RoundRectangle 12"
                           Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Всего элементов"
                                   TextColor="#0e1a13"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label x:Name="TotalItemsLabel"
                                   TextColor="#0e1a13"
                                   FontSize="32"
                                   FontAttributes="Bold"/>
                            <Label Text="в коллекции"
                                   TextColor="#51946c"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Общая стоимость -->
                    <Border Grid.Row="0" Grid.Column="1"
                           BackgroundColor="White"
                           Stroke="#d1e6d9"
                           StrokeThickness="1"
                           StrokeShape="RoundRectangle 12"
                           Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Общая стоимость"
                                   TextColor="#0e1a13"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label x:Name="TotalValueLabel"
                                   TextColor="#0e1a13"
                                   FontSize="32"
                                   FontAttributes="Bold"/>
                            <Label Text="суммарно"
                                   TextColor="#51946c"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Средняя стоимость -->
                    <Border Grid.Row="1" Grid.Column="0"
                           BackgroundColor="White"
                           Stroke="#d1e6d9"
                           StrokeThickness="1"
                           StrokeShape="RoundRectangle 12"
                           Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Средняя стоимость"
                                   TextColor="#0e1a13"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label x:Name="AverageValueLabel"
                                   TextColor="#0e1a13"
                                   FontSize="24"
                                   FontAttributes="Bold"/>
                            <Label Text="на элемент"
                                   TextColor="#51946c"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Последнее добавление -->
                    <Border Grid.Row="1" Grid.Column="1"
                           BackgroundColor="White"
                           Stroke="#d1e6d9"
                           StrokeThickness="1"
                           StrokeShape="RoundRectangle 12"
                           Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Последнее добавление"
                                   TextColor="#0e1a13"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label x:Name="LastAddedDateLabel"
                                   TextColor="#0e1a13"
                                   FontSize="24"
                                   FontAttributes="Bold"/>
                            <Label Text="дата"
                                   TextColor="#51946c"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Статистика по категориям -->
                <Label Text="Распределение по категориям"
                       TextColor="#0e1a13"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"/>

                <Border BackgroundColor="White"
                       Stroke="#d1e6d9"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 12"
                       Padding="16"
                       Margin="16,8,16,16">
                    <VerticalStackLayout x:Name="CategoryStatsContainer" 
                                         Spacing="8">
                        <!-- Категории будут добавляться динамически -->
                    </VerticalStackLayout>
                </Border>

                <!-- Топ-5 самых ценных -->
                <Label Text="Самые ценные элементы"
                       TextColor="#0e1a13"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"/>

                <Border BackgroundColor="White"
                       Stroke="#d1e6d9"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 12"
                       Padding="16"
                       Margin="16,8,16,16">
                    <VerticalStackLayout x:Name="MostValuableContainer" 
                                         Spacing="8">
                        <!-- Элементы будут добавляться динамически -->
                    </VerticalStackLayout>
                </Border>

                <!-- Топ-5 самых старых -->
                <Label Text="Самые старые элементы"
                       TextColor="#0e1a13"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="16,20,16,8"/>

                <Border BackgroundColor="White"
                       Stroke="#d1e6d9"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 12"
                       Padding="16"
                       Margin="16,8,16,16">
                    <VerticalStackLayout x:Name="OldestItemsContainer" 
                                         Spacing="8">
                        <!-- Элементы будут добавляться динамически -->
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Нижняя навигация -->
        <Border Grid.Row="2"
                BackgroundColor="#f8fbfa"
                Padding="0,8,0,0"
                Stroke="#e8f2ec"
                StrokeThickness="1"
                StrokeShape="Rectangle">

            <Grid ColumnDefinitions="*,*,*,*,*"
                  ColumnSpacing="8"
                  Padding="16,8,16,8">

                <!-- Главная -->
                <VerticalStackLayout Spacing="4" Grid.Column="0">
                    <Label Text="🏠"
           FontSize="24"
           TextColor="#51946c"
           HorizontalOptions="Center"/>
                    <Label Text="Главная"
           TextColor="#51946c"
           FontSize="12"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHomeNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4" Grid.Column="1">
                    <Label Text="➕"
           FontSize="24"
           TextColor="#51946c"
           HorizontalOptions="Center"/>
                    <Label Text="Добавить"
           TextColor="#51946c"
           FontSize="12"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddItemNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4" Grid.Column="2">
                    <Label Text="🔧"
           FontSize="24"
           TextColor="#51946c"
           HorizontalOptions="Center"/>
                    <Label Text="Фильтры"
           TextColor="#51946c"
           FontSize="12"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFiltersNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4" Grid.Column="3">
                    <Label Text="📊"
           FontSize="24"
           TextColor="#0e1a13"
           HorizontalOptions="Center"/>
                    <Label Text="Статистика"
           TextColor="#0e1a13"
           FontSize="12"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnStatsNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4" Grid.Column="4">
                    <Label Text="⚙️"
           FontSize="24"
           TextColor="#51946c"
           HorizontalOptions="Center"/>
                    <Label Text="Настройки"
           TextColor="#51946c"
           FontSize="12"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSettingsNavTapped" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>
            </Grid>
        </Border>

    </Grid>
</ContentPage>